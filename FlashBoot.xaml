        </Border>
        <Image Margin="193,138,487,111" Source="iconfinder_icon-flash_211664.png" Stretch="Fill" MaxWidth="112" MaxHeight="128" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Image Margin="468,138,196,111" Source="icon.png" Stretch="Fill" MaxWidth="128" MaxHeight="128" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="292" Margin="138,75,0,10" VerticalAlignment="Center" Width="220" Opacity="0" Click="Button_Click_1"/>
        <Button Content="Button" HorizontalAlignment="Right" Margin="0,75,150,14" VerticalAlignment="Center" Width="220" Height="288" Opacity="0" Click="Button_Click_2"/>

    </Grid>
